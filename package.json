    "build-linux": "electron-builder build --linux --ia32 --publish onTagOrDraft",
    "appveyor-build": "electron-builder build --win --publish onTagOrDraft"
  },
  "repository": {
    "type" : "git",
    "url" : "https://github.com/francspro/boombang"
  },
  "author": "Fran",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^6.1.2",
    "electron-builder": "^22.2.0",
    "electron-is-dev": "^1.1.0"
  },
  "dependencies": {
    "discord-rich-presence": "0.0.8",
    "electron-is-dev": "^1.1.0",
    "electron-updater": "^4.2.0"
  },
  "build": {
    "appId": "com.boombang.client",
    "productName": "BoomBangLauncher",
